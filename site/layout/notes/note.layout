{{ define "note" }}
{{ template "head" .}}

<body>

    {{template "header" .}}
        <div class="container">
            {{ if eq .Frontmatter.Type "post" }}
            <div class="post-description">
                <h1>{{ .Frontmatter.Title }}</h1>
                <div class="authors-paceholder">
                    <p>
                        Published on {{.Frontmatter.Date}}
                        <!-- if length of frontmatter authors is 0 -->
                        {{ if eq (len .Frontmatter.Authors) 0 }}
                        {{$.Layout.Author}}
                        {{ else }}
                        {{range .Frontmatter.Authors }}
                        {{ . }},
                        {{ end }}
                        {{ end }}
                    </p>
                </div>
            </div>
            {{ else }}
            {{ end }}
            {{.Body}}
    </div>
    {{template "footer" .}}
</body>

</html>

{{ end}}
